<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state: white background -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- White background -->
        </shape>
    </item>

    <!-- Default (not selected): blue background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Blue background -->
            <stroke android:width="1dp" android:color="#2196F3" /> <!-- Blue border -->
        </shape>
    </item>
</selector>

